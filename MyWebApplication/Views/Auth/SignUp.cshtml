@using MyWebApplication.Models.Forms

@model SignUpFormModel

@*This is the view Signup.*@

<section id="signup">
	<div class="container">

		<form method="post" novalidate>
			<h1>Create Account</h1>
			<p>Already have an account?<a asp-controller="Auth" asp-action="SignIn">Sign in here</a></p>
			<div class="content">
				<div id="form-firstname" class="input-group">
					<label asp-for="@Model.FirstName"></label>
					<span asp-validation-for="@Model.FirstName"></span>
					<input asp-for="@Model.FirstName" />
				</div>
				<div id="form-lastname" class="input-group">
					<label asp-for="@Model.LastName"></label>
					<span asp-validation-for="@Model.LastName"></span>
					<input asp-for="@Model.LastName" />
				</div>
				<div id="form-email" class="input-group">
					<label asp-for="@Model.Email"></label>
					<span asp-validation-for="@Model.Email"></span>
					<input asp-for="@Model.Email" />
				</div>
				<div id="form-password" class="input-group">
					<label asp-for="@Model.Password"></label>
					<span asp-validation-for="@Model.Password"></span>
					<input asp-for="@Model.Password" />
				</div>
				<div id="form-confirm" class="input-group">
					<label asp-for="@Model.ConfirmPassword"></label>
					<span asp-validation-for="@Model.ConfirmPassword"></span>
					<input asp-for="@Model.ConfirmPassword" />
				</div>
				<div id="form-terms" class="checkbox-group"> 
					<input asp-for="@Model.Terms" />
					<span asp-validation-for="@Model.Terms"></span>
					<label asp-for="@Model.Terms">I agree to the <a asp-controller="Auth" asp-action="Terms">Terms</a> & <a asp-controller="account" asp-action="conditions">Conditions</a>.</label>
				</div>
				@* asp-action="OnPost" ???? *@
				<button  id="form-button" class="btn-theme-s" type="submit">Sign Up</button>
			</div>
			 
			
		</form>

	</div>
</section>

